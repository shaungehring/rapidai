# LLM Provider API Keys
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...
COHERE_API_KEY=...

# Default LLM Settings
RAPIDAI_LLM_PROVIDER=anthropic
RAPIDAI_LLM_MODEL=claude-sonnet-4
RAPIDAI_LLM_TEMPERATURE=0.7
RAPIDAI_LLM_MAX_TOKENS=4000

# Cache Settings
RAPIDAI_CACHE_BACKEND=memory  # or redis
RAPIDAI_REDIS_URL=redis://localhost:6379

# Memory Settings
RAPIDAI_MEMORY_BACKEND=memory  # or redis, postgres

# Vector DB Settings
RAPIDAI_VECTOR_DB=chroma
RAPIDAI_CHROMA_PATH=./data/chroma

# Monitoring
RAPIDAI_TRACK_COSTS=true
RAPIDAI_LOG_CONVERSATIONS=false

# Server Settings
RAPIDAI_HOST=0.0.0.0
RAPIDAI_PORT=8000
RAPIDAI_WORKERS=1
RAPIDAI_DEBUG=true
